<div class="grid">
    <div id="nav-cont">
        <div class="nav" id="nav">
            <form id="upload-form" action="/uploadmultiple" method="POST" enctype="multipart/form-data">
                <input type="file" class="form-control" id="upload-input" name="images" multiple/>
                <div class="card bg-secondary mb-3" id="upload-status-card">
                    <div class="card-header">Upload Status</div>
                    <div class="card-body">
                        <% upload_msg.forEach(msg => { %>
                            <p class='upload-msg-paragraph'><%= msg%></p>
                        <% }); %>
                    </div>
                  </div>
                <button type="submit" class="btn btn-primary" id="upload-btn">Upload</button>
            </form>
            <hr id="nav-first-hr">
            <button id="nav-arrow_btn"></button>
            <input type="range" class="form-range" id="img-size-range" min="-10" max="90" value="0">
            <div id="select-cont">
                <form action="" id="collection-form">
                    <select class="form-select" id="collection-select" name="collection-select" size="8">
                        <optgroup label="Default">
                            <option value="source" selected>source</option>
                            <option value="favorites">favorites</option>
                        </optgroup>
                        <optgroup label="Your Collections">
                            
                        </optgroup>
                    </select>
                    <div id="collections-btns">
                        <button class="btn btn-success btn-sm" id="add-collection-btn">add</button>
                        <button class="btn btn-danger btn-sm" id="delete-collection-btn">delete</button>
                        <button class="btn btn-primary btn-sm" id="download-collection-btn">download</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="gallery_wrapper">
        <div class="form-check form-switch" id="lights-switch-cont">
            <input class="form-check-input" type="checkbox" id="lights-switch-checkbox" checked="">
            <label class="form-check-label" for="lights-switch-checkbox">lights on</label>
        </div>
        <input class="form-control form-control-lg" type="text" placeholder="Collection Name" id="collection-name">
        <div class="gallery">
            <% for (let i = 0; i < images.length; i++) { %> 
                <div class="frame">
                    <img class="img" id="img<%= i%>" src='data:<%= images[i].contentType %>;base64,<%= images[i].imageBase64 %>'>
                </div>
            <% } %> 
        </div>
        <div class="switch-frame">
            <button id="prev-frame-btn" class="move-frame prev_frame"></button>
            <button id="next-frame-btn" class="move-frame next_frame"></button>
        </div>
    </div>
    <span class="img-show-num"></span>
    <div id="control" class="btn-group" role="group" aria-label="Basic example">
        <button id="add-to-favorite-btn" class="btn btn-secondary">favorite</button>
        <button id="remove-img-btn" class="btn btn-secondary">remove</button>
        <button id="edit-img-btn" class="btn btn-secondary">edit</button>
        <button id="slideshow-btn" class="btn btn-secondary">slideshow</button>
        <button id="move-to-collection" class="btn btn-secondary">-></button>
        <button id="share-img-btn" class="btn btn-secondary">share</button>
    </div>
</div>
<div class="editor">
    <canvas class="canvas-block" id="canvas-block"></canvas>
    <div class="editor-options">
        <div class="filters-cont">
            <h1 style="font-weight: bold;">Filters</h1>
            <!-- filters file -->
            <%- include('./filters.ejs') %> 
        </div>
        <div class="effects-cont">
            <h1 style="font-weight: bold;">Effects</h1>
            <!-- effects file -->
            <%- include('./effects.ejs') %> 
        </div>
        <div>
            <button class="btn btn-secondary btn-sm" id="rotate-img-btn">rotate</button>
            <button class="btn btn-secondary btn-sm" id="crop-img-btn">crop</button>
            <input type="range" class="form-range" id="img-resize-range" min="10" max="100" value="50">
        </div>
        <div class="set-editor-cont">
            <button class="btn btn-secondary btn-sm revert-rendering" id="clear-edit-btn">clear</button>
            <button class="btn btn-secondary btn-sm revert-rendering" id="apply-edit-btn">apply</button>
            <button class="btn btn-secondary btn-sm revert-rendering" id="cancel-edit-btn">cancel</button>
        </div>
    </div>
</div>



